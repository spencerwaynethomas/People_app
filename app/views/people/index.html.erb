<h1> People on your App </h1>
<h2><%= link_to 'Add New Person', new_person_path %></h2>
<% @people.each do |person| %>
  <h2><%= person.first_name %></h2>
  <%= link_to 'Show Person', person_path(person.id) %>
  <br />
  <%= link_to 'Edit Person', edit_person_path(person.id) %>
  <br />
  <%= link_to 'Delete Person', person, method: :delete %>
  <br />
<% end %>
